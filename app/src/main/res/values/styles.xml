<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base Application Theme -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/primary_orange</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/primary_coral</item>
        <item name="android:windowBackground">@color/screen_background</item>
        <item name="android:textColorPrimary">@color/text_primary</item>
        <item name="android:textColorSecondary">@color/text_secondary</item>
    </style>
    
    <!-- Splash Theme -->
    <style name="SplashTheme" parent="AppTheme">
        <item name="android:windowBackground">@drawable/splash_background</item>
    </style>
    
    <!-- Text Styles -->
    <style name="TextAppearance.Display" parent="TextAppearance.MaterialComponents.Headline4">
        <item name="android:textSize">@dimen/text_display</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>
    
    <style name="TextAppearance.Headline" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textSize">@dimen/text_headline</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>
    
    <style name="TextAppearance.Title" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="android:textSize">@dimen/text_title</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>
    
    <style name="TextAppearance.Body" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textSize">@dimen/text_body</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>
    
    <style name="TextAppearance.Caption" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:textSize">@dimen/text_caption</item>
        <item name="android:textColor">@color/text_secondary</item>
    </style>
    
    <!-- Card Styles -->
    <style name="CardView" parent="Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">@dimen/card_corner_radius</item>
        <item name="cardElevation">@dimen/card_elevation</item>
        <item name="cardBackgroundColor">@color/card_background</item>
        <item name="contentPadding">@dimen/spacing_default</item>
    </style>
    
    <style name="CardView.Balance">
        <item name="cardBackgroundColor">@color/primary_dark</item>
    </style>
    
    <!-- Button Styles -->
    <style name="Button" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">@color/text_white</item>
        <item name="backgroundTint">@color/primary_orange</item>
        <item name="cornerRadius">@dimen/button_corner_radius</item>
        <item name="android:paddingStart">@dimen/button_padding_horizontal</item>
        <item name="android:paddingEnd">@dimen/button_padding_horizontal</item>
        <item name="android:minHeight">@dimen/button_height</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>
    
    <style name="Button.Outlined" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textColor">@color/primary_orange</item>
        <item name="strokeColor">@color/primary_orange</item>
        <item name="cornerRadius">@dimen/button_corner_radius</item>
    </style>
    
    <!-- Chip/Pill Styles -->
    <style name="Chip" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="chipCornerRadius">@dimen/pill_corner_radius</item>
        <item name="android:textSize">@dimen/text_caption</item>
    </style>
    
    <style name="Chip.Positive">
        <item name="chipBackgroundColor">@color/green_light</item>
        <item name="android:textColor">@color/white</item>
    </style>
    
    <style name="Chip.Negative">
        <item name="chipBackgroundColor">@color/red_light</item>
        <item name="android:textColor">@color/white</item>
    </style>
</resources>
