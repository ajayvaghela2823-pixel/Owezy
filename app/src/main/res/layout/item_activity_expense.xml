<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/spacing_small"
    app:cardCornerRadius="@dimen/card_corner_radius"
    app:cardElevation="@dimen/card_elevation">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/spacing_default">

        <!-- Top Row: Description and Amount -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_activity_description"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Lunch at restaurant"
                android:textSize="@dimen/text_body"
                android:textColor="@color/text_primary"
                android:fontFamily="sans-serif-medium" />

            <TextView
                android:id="@+id/tv_activity_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="â‚¹500.00"
                android:textSize="@dimen/text_body"
                android:textColor="@color/primary_orange"
                android:fontFamily="sans-serif-medium" />

        </LinearLayout>

        <!-- Category and Paid By -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_tiny"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_activity_category"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dining"
                android:textSize="@dimen/text_caption"
                android:textColor="@color/white"
                android:background="@drawable/bg_pill_green"
                android:paddingStart="@dimen/pill_padding_horizontal"
                android:paddingEnd="@dimen/pill_padding_horizontal"
                android:paddingTop="@dimen/spacing_tiny"
                android:paddingBottom="@dimen/spacing_tiny" />

            <TextView
                android:id="@+id/tv_activity_paid_by"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="@dimen/spacing_small"
                android:text="Paid by You"
                android:textSize="@dimen/text_caption"
                android:textColor="@color/text_secondary" />

        </LinearLayout>

        <!-- Date -->
        <TextView
            android:id="@+id/tv_activity_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_tiny"
            android:text="Jan 18, 2026 at 03:30 PM"
            android:textSize="@dimen/text_small"
            android:textColor="@color/text_hint" />

    </LinearLayout>

</androidx.cardview.widget.CardView>
