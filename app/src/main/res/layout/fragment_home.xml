<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@color/screen_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/spacing_default">

        <!-- Header -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/spacing_large">

            <TextView
                android:id="@+id/tv_app_tagline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:text="@string/app_tagline"
                android:textSize="@dimen/text_title"
                android:textColor="@color/text_primary"
                android:fontFamily="sans-serif-medium" />

            <ImageView
                android:id="@+id/iv_profile"
                android:layout_width="@dimen/avatar_size_medium"
                android:layout_height="@dimen/avatar_size_medium"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_menu_myowner"
                android:contentDescription="Profile" />
        </RelativeLayout>

        <!-- Balance Cards Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="@dimen/spacing_large"
            android:weightSum="2">

            <!-- You Owe Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:layout_marginEnd="@dimen/spacing_small"
                app:cardCornerRadius="@dimen/card_corner_radius"
                app:cardElevation="@dimen/card_elevation"
                app:cardBackgroundColor="@color/primary_dark">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="@dimen/spacing_default">

                    <TextView
                        android:id="@+id/tv_you_owe_amount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="$567.58"
                        android:textSize="@dimen/text_headline"
                        android:textColor="@color/white"
                        android:fontFamily="sans-serif-medium" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/you_owe"
                        android:textSize="@dimen/text_small"
                        android:textColor="@color/white"
                        android:layout_marginTop="@dimen/spacing_tiny" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Owed to You Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:layout_marginStart="@dimen/spacing_small"
                app:cardCornerRadius="@dimen/card_corner_radius"
                app:cardElevation="@dimen/card_elevation"
                app:cardBackgroundColor="@color/primary_orange">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="@dimen/spacing_default">

                    <TextView
                        android:id="@+id/tv_owed_to_you_amount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="$825.43"
                        android:textSize="@dimen/text_headline"
                        android:textColor="@color/white"
                        android:fontFamily="sans-serif-medium" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/owed_to_you"
                        android:textSize="@dimen/text_small"
                        android:textColor="@color/white"
                        android:layout_marginTop="@dimen/spacing_tiny" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <!-- Pending Bills Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/pending_bills"
            android:textSize="@dimen/text_title"
            android:textColor="@color/text_primary"
            android:fontFamily="sans-serif-medium"
            android:layout_marginBottom="@dimen/spacing_medium" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_pending_bills"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/spacing_large"
            android:nestedScrollingEnabled="false" />

        <!-- Friends Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/friends"
            android:textSize="@dimen/text_title"
            android:textColor="@color/text_primary"
            android:fontFamily="sans-serif-medium"
            android:layout_marginBottom="@dimen/spacing_medium" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_friends"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:nestedScrollingEnabled="false" />

    </LinearLayout>
</ScrollView>
